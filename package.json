{
  "name": "biz-editor-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node bin/www",
    "dev": "./node_modules/.bin/nodemon bin/www",
    "prd-dev": "cross-env NODE_ENV=prd-dev pm2 start bin/pm2-prd-dev.config.js",
    "prd": "pm2 start bin/www",
    "test:local": "cross-env NODE_ENV=test_local jest --runInBand  --passWithNoTests --colors --forceExit",
    "test:remote": "cross-env NODE_ENV=test_remote jest --runInBand  --passWithNoTests --colors --forceExit",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint-fix": "eslint --fix \"src/**/*.{js,ts}\"",
    "prepare": "husky install",
    "tree": "tree -I 'node_modules|test*|LICENSE|README.en.md' > TREE.md"
  },
  "dependencies": {
    "ajv": "^8.11.0",
    "cross-env": "^7.0.3",
    "debug": "^4.1.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-convert": "^1.2.0",
    "koa-json": "^2.0.2",
    "koa-jwt": "^4.0.3",
    "koa-logger": "^3.2.0",
    "koa-onerror": "^4.1.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-views": "^6.2.0",
    "mongoose": "^5.13.15",
    "mysql2": "^2.3.3",
    "pug": "^2.0.3",
    "redis": "^3.1.2",
    "require-all": "^3.0.0",
    "sequelize": "^6.21.4",
    "simple-git": "^3.13.0"
  },
  "devDependencies": {
    "axios": "^0.27.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^26.6.3",
    "nodemon": "^1.19.1",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4"
  }
}
